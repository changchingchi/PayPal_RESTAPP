<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single Payment"
        android:id="@+id/pp_buynow"
        android:onClick="PP_buynow"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consent Payment"
        android:id="@+id/PP_futureConsent"
        android:layout_below="@+id/pp_buynow"
        android:layout_marginTop="111dp"
        android:layout_alignStart="@+id/pp_buynow"
        android:layout_alignEnd="@+id/pp_buynow" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Execute Payment"
        android:id="@+id/pp_futurebuynow"
        android:layout_below="@+id/PP_futureConsent"
        android:layout_marginTop="45dp"
        android:layout_alignStart="@+id/PP_futureConsent"
        android:layout_alignEnd="@+id/PP_futureConsent" />

</RelativeLayout>
